<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="220sp"
                android:background="#12000000"
                >

                <ImageView
                    android:id="@+id/resultImage"
                    android:layout_width="match_parent"
                    android:layout_height="220sp"
                    android:layout_centerHorizontal="true"
                    android:scaleType="centerCrop" />

                <RelativeLayout
                    android:layout_width="180dp"
                    android:layout_height="180dp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="20sp">

                    <ImageView
                        android:id="@+id/originalImage"
                        android:layout_width="180dp"
                        android:layout_height="180dp"/>
                    <ImageView
                        android:id="@+id/editImage"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"
                        android:padding="8sp"
                        android:visibility="gone"
                        android:layout_marginBottom="45sp"
                        android:layout_marginRight="30sp"
                        android:background="@drawable/round_blue"
                        android:src="@drawable/camera" />

                    <TextView
                        android:id="@+id/profileName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:layout_alignParentBottom="true"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        />
                </RelativeLayout>
            </RelativeLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Personal Information"
                android:padding="5dp"
                android:layout_marginLeft="5sp"
                android:layout_marginTop="10sp"
                android:textSize="16sp"
                android:textColor="@color/upviolet"
                android:textStyle="bold"
                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                >
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="0.5"
                    >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="First Name"
                        android:padding="5dp"
                        android:textSize="14sp"
                        android:textColor="@color/textblack"
                        android:textStyle="bold"
                        />

                    <EditText
                        android:id="@+id/firstName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5sp"
                        android:enabled="false"
                        android:text=""
                        android:textSize="14sp"
                        android:imeOptions="actionNext"
                        android:minHeight="40sp"
                        android:layout_marginTop="5sp"
                        android:background="@drawable/curved_gray"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="0.5"
                    android:layout_marginLeft="10dp"
                    >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Last Name"
                        android:padding="5dp"
                        android:textSize="14sp"
                        android:textColor="@color/textblack"
                        android:textStyle="bold"
                        />

                    <EditText
                        android:id="@+id/lastName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5sp"
                        android:text=""
                        android:imeOptions="actionNext"
                        android:enabled="false"
                        android:textSize="14sp"
                        android:minHeight="40sp"
                        android:layout_marginTop="5sp"
                        android:background="@drawable/curved_gray"
                        />
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="0.5"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Phone"
                    android:padding="5dp"
                    android:textSize="14sp"
                    android:textColor="@color/textblack"
                    android:textStyle="bold"
                    />

                <EditText
                    android:id="@+id/phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5sp"
                    android:minHeight="40sp"
                    android:enabled="false"
                    android:imeOptions="actionNext"
                    android:inputType="number"
                    android:textSize="14sp"
                    android:layout_marginTop="5sp"
                    android:background="@drawable/curved_gray"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Email"
                    android:padding="5dp"
                    android:textSize="14sp"
                    android:textColor="@color/textblack"
                    android:textStyle="bold"
                    />

                <EditText
                    android:id="@+id/email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5sp"
                    android:minHeight="40sp"
                    android:enabled="false"
                    android:textSize="14sp"
                    android:imeOptions="actionNext"
                    android:inputType="textEmailAddress"
                    android:layout_marginTop="5sp"
                    android:background="@drawable/curved_gray"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Your Location"
                    android:padding="5dp"
                    android:layout_marginTop="10sp"
                    android:textSize="16sp"
                    android:textColor="@color/upviolet"
                    android:textStyle="bold"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Location"
                    android:padding="5dp"
                    android:textSize="14sp"
                    android:textColor="@color/textblack"
                    android:textStyle="bold"
                    />

                <AutoCompleteTextView
                    android:id="@+id/location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5sp"
                    android:imeOptions="actionNext"
                    android:enabled="false"
                    android:textSize="14sp"
                    android:minHeight="40sp"
                    android:layout_marginTop="5sp"
                    android:background="@drawable/curved_gray"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Address"
                    android:padding="5dp"
                    android:textSize="14sp"
                    android:textColor="@color/textblack"
                    android:textStyle="bold"
                    />

                <EditText
                    android:id="@+id/address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5sp"
                    android:minHeight="40sp"
                    android:enabled="false"
                    android:imeOptions="actionNext"
                    android:textSize="14sp"
                    android:layout_marginTop="5sp"
                    android:background="@drawable/curved_gray"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="City"
                    android:padding="5dp"
                    android:textSize="14sp"
                    android:textColor="@color/textblack"
                    android:textStyle="bold"
                    />

                <EditText
                    android:id="@+id/city"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5sp"
                    android:imeOptions="actionNext"
                    android:minHeight="40sp"
                    android:enabled="false"
                    android:textSize="14sp"
                    android:layout_marginTop="5sp"
                    android:background="@drawable/curved_gray"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="State/Region"
                    android:padding="5dp"
                    android:textSize="14sp"
                    android:textColor="@color/textblack"
                    android:textStyle="bold"
                    />

                <EditText
                    android:id="@+id/state"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5sp"
                    android:minHeight="40sp"
                    android:enabled="false"
                    android:imeOptions="actionNext"
                    android:textSize="14sp"
                    android:layout_marginTop="5sp"
                    android:background="@drawable/curved_gray"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Postal/Zip Code"
                    android:padding="5dp"
                    android:textSize="14sp"
                    android:textColor="@color/textblack"
                    android:textStyle="bold"
                    />

                <EditText
                    android:id="@+id/postalCode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5sp"
                    android:minHeight="40sp"
                    android:enabled="false"
                    android:textSize="14sp"
                    android:imeOptions="actionNext"
                    android:layout_marginTop="5sp"
                    android:background="@drawable/curved_gray"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Country"
                    android:padding="5dp"
                    android:textSize="14sp"
                    android:textColor="@color/textblack"
                    android:textStyle="bold"
                    />

                <EditText
                    android:id="@+id/country"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5sp"
                    android:minHeight="40sp"
                    android:imeOptions="actionDone"
                    android:enabled="false"
                    android:textSize="14sp"
                    android:layout_marginTop="5sp"
                    android:layout_marginBottom="10sp"
                    android:background="@drawable/curved_gray"
                    />


            </LinearLayout>


        </LinearLayout>
    </ScrollView>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/myProfileFAB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        app:backgroundTint="@color/upviolet"
        android:src="@drawable/edit"
        android:tint="@color/white"
        />

</RelativeLayout>