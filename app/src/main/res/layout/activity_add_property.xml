<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layoutDots"
        android:layout_width="match_parent"
        android:layout_height="18sp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="15sp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="25sp"
            android:layout_height="25sp"
            android:src="@drawable/round_ring" />

        <View
            android:id="@+id/oneView"
            android:layout_width="50sp"
            android:layout_height="2sp"
            android:background="@color/gray" />

        <ImageView
            android:id="@+id/twoImage"
            android:layout_width="25sp"
            android:layout_height="25sp"
            android:src="@drawable/empty_ring" />

        <View
            android:id="@+id/twoView"
            android:layout_width="50sp"
            android:layout_height="2sp"
            android:background="@color/gray" />

        <ImageView
            android:id="@+id/threeImage"
            android:layout_width="25sp"
            android:layout_height="25sp"
            android:src="@drawable/empty_ring" />

        <View
            android:id="@+id/threeView"
            android:layout_width="50sp"
            android:layout_height="2sp"
            android:background="@color/gray" />

        <ImageView
            android:id="@+id/fourImage"
            android:layout_width="25sp"
            android:layout_height="25sp"
            android:src="@drawable/empty_ring" />

        <View
            android:id="@+id/fourView"
            android:layout_width="50sp"
            android:layout_height="2sp"
            android:background="@color/gray" />

        <ImageView
            android:id="@+id/fiveImage"
            android:layout_width="25sp"
            android:layout_height="25sp"
            android:src="@drawable/empty_ring" />

    </LinearLayout>

    <com.android.pyp.utils.CustomViewPager
        android:id="@+id/pager"
        android:layout_marginTop="10sp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />

</LinearLayout>